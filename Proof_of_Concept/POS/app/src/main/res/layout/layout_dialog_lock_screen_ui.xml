<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:gravity="right"
            android:id="@+id/tvPassword1"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="4 digits."
            android:id="@+id/txtPassword1"
            android:inputType="numberPassword"
            android:maxLength="4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Re-enter password:"
            android:gravity="right"
            android:id="@+id/tvPassword2"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="4 digits."
            android:id="@+id/txtPassword2"
            android:inputType="numberPassword"
            android:maxLength="4"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An email will be send to the following Gmail account in case you forgot the password."
        android:textColor="@color/divider_grey"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:gravity="right"
            android:id="@+id/tvEmail1"/>
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:hint="MyShop@gmail.com"
            android:id="@+id/txtEmail1"
            android:maxLength="50"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Re-enter Email:"
            android:gravity="right"
            android:id="@+id/tvEmail2"/>
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:hint="MyShop@gmail.com"
            android:id="@+id/txtEmail2"
            android:maxLength="50"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

</LinearLayout>