<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Paypal Login"
            android:gravity="right"
            android:id="@+id/tvLogin"
            android:textSize="25dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:gravity="right"
            android:id="@+id/tvUsername"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsername"
            android:maxLength="80"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:gravity="right"
            android:id="@+id/tvPassword"
            android:textSize="25dp"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:inputType="textPassword"
            android:maxLength="80"
            android:textSize="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save info"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/chkSaveInfo"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By checking this check box you are agreed to pay $30.00 for a month subscription."
            android:id="@+id/chkAgree"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginLeft="100dp"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/top_category_item_lost_focus_grey"
            android:textColor="@color/white"
            android:id="@+id/tvSubmit"
            android:enabled="false"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
     </LinearLayout>
</LinearLayout>