<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="700dp"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/green_border_ok"
            android:id="@+id/imgOK"
            android:layout_toLeftOf="@+id/imgCancel"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/green_border_cancel"
            android:id="@+id/imgCancel"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView

            android:id="@+id/tabModifierIndividual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/half_transparent_dark_grey"
            android:gravity="center"
            android:text="Individual" />

        <LinearLayout
            android:id="@+id/dividerTabTitle"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D0D0C0"
            android:orientation="vertical"

            />

        <TextView

            android:id="@+id/tabModifierGlobal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Global" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ModifierContainer"
        android:layout_width="match_parent"
        android:layout_height="330dp"

        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/svModifierContainer"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ModifierPage"
                >

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>