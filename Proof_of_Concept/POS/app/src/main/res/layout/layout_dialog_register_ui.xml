<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register your device with your email and passwords."
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:gravity="right"
            android:id="@+id/tvEmail1"/>
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:hint="MyShop@gmail.com"
            android:id="@+id/txtEmail1"
            android:maxLength="50"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Re-enter Email:"
            android:gravity="right"
            android:id="@+id/tvEmail2"/>
        <EditText
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:hint="MyShop@gmail.com"
            android:id="@+id/txtEmail2"
            android:maxLength="50"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:gravity="right"
            android:id="@+id/tvPassword1"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="At least 8 digits."
            android:id="@+id/txtPassword1"
            android:inputType="numberPassword"
            android:maxLength="12"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Re-enter password:"
            android:gravity="right"
            android:id="@+id/tvPassword2"/>
        <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:hint="At least 8 digits."
            android:id="@+id/txtPassword2"
            android:inputType="numberPassword"
            android:maxLength="12"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="60dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/tvRegister"
            />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_grey"></LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="60dp"
            android:text="Exit"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/tvExit"/>

    </LinearLayout>

</LinearLayout>