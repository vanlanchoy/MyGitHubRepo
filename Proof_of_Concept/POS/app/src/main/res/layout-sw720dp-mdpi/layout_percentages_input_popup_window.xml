<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="top"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_tax_percentage_popup_window"
        android:textSize="@dimen/popup_window_label_text_size"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/lblNewCategoryWindowTitle"
        android:textColor="@color/black"></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="6"
            android:textSize="60sp"
            android:text="00.000"
            android:layout_alignParentLeft="true"
            android:id="@+id/txtTaxPercentage"
            android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:layout_toRightOf="@+id/txtTaxPercentage"
            android:text="%"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>



    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal"

        >



        <Button android:text="1"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericOne"
            />

        <Button android:text="2"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericTwo"/>

        <Button android:text="3"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericThree"/>

        <Button android:text="Del"
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            android:textSize="26sp"
            android:id="@+id/btnDelete"/>

        <Button android:text="4"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericFour"/>

        <Button android:text="5"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericFive"/>

        <Button android:text="6"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericSix"/>



        <Button android:text="7"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericSeven"/>

        <Button android:text="8"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericEight"/>

        <Button android:text="9"
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:textSize="26sp"
            android:id="@+id/btnNumericNine"/>

        <Button
            android:layout_gravity="fill"
            android:layout_rowSpan="2"
            android:textSize="26sp"
            android:text="Clear"
            android:id="@+id/btnClear"/>

        <Button
            android:layout_columnSpan="3"
            android:layout_gravity="fill"
            android:textSize="26sp"
            android:layout_height="73dp"
            android:text="0"
            android:id="@+id/btnNumericZero"/>





    </GridLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/btnSave_TaxPercentagePopup"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="26sp"
            />
        <Button
            android:id="@+id/btnClose_TaxPercentagePopup"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_toRightOf="@+id/btnSave_TaxPercentagePopup"
            android:textSize="26sp"/>
    </RelativeLayout>
</LinearLayout>